{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Employment Rate by Region in Ireland (2024)",
  "width": 500,
  "height": 700,
  "data": {
    "url": "https://raw.githubusercontent.com/Justetete/COMP40610_Information_Visualisation_Assignment/refs/heads/main/raw_datasets/external_data/NUTS2_Boundaries_Generalised_100m_-8084823292468818295.geojson",
    "format": {
      "type": "json",
      "property": "features"
    }
  },
  "transform": [
    {
      "lookup": "properties.NUTS2NAME",
      "from": {
        "data": {
          "values": [
            {"NUTS 2 Region": "Eastern and Midland", "Employment_Rate": 80.8, "Unemployment_Rate": 3.2},
            {"NUTS 2 Region": "Northern and Western", "Employment_Rate": 78.4, "Unemployment_Rate": 3.8},
            {"NUTS 2 Region": "Southern", "Employment_Rate": 78.8, "Unemployment_Rate": 3.5}
          ]
        },
        "key": "NUTS 2 Region",
        "fields": ["Employment_Rate"]
      }
    }
  ],
  "projection": {
    "type": "identity",
    "reflectY": true
  },
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 2
  },
  "encoding": {
    "color": {
      "field": "Employment_Rate",
      "type": "quantitative",
      "scale": {
        "scheme": "blues",
        "domain": [78, 81]
      },
      "legend": {
        "title": "Employment Rate (%)",
        "orient": "bottom"
      }
    },
    "tooltip": [
      {"field": "properties.NUTS2NAME", "type": "nominal", "title": "Region"},
      {"field": "Employment_Rate", "type": "quantitative", "title": "Employment Rate (%)", "format": ".1f"}
    ]
  }
}