{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Employment Rate by Region in Ireland (2024)",
  "width": 500,
  "height": 700,
  "data": {
    "url": "https://raw.githubusercontent.com/Justetete/COMP40610_Information_Visualisation_Assignment/refs/heads/main/raw_datasets/external_data/NUTS2_Boundaries_Generalised_100m_-8084823292468818295.geojson",
    "format": {
      "type": "json",
      "property": "features"
    }
  },
  "transform": [
    {
      "lookup": "properties.NUTS2NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Justetete/COMP40610_Information_Visualisation_Assignment/refs/heads/main/data_cleaning/yearly_regional_data/employment_rate_2023.csv" 
        },
        "key": "region",
        "fields": ["employment_rate"]
      }
    }
  ],
  "projection": {
    "type": "identity",
    "reflectY": true
  },
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 2
  },
  "encoding": {
    "color": {
      "field": "employment_rate",
      "type": "quantitative",
      "scale": {
        "scheme": "blues",
        "domain": [70, 82]
      },
      "legend": {
        "title": "Employment Rate (%)",
        "orient": "bottom"
      }
    },
    "tooltip": [
      {"field": "properties.NUTS2NAME", "type": "nominal", "title": "Region"},
      {"field": "employment_rate", "type": "quantitative", "title": "Employment Rate (%)", "format": ".1f"}
    ]
  }
}